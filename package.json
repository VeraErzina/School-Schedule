{
  "name": "school-vite-project",
  "private": true,
  "version": "0.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-pack": "npm run build && npx electron-builder build --win"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "electron": "^36.8.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "json-server": "^1.0.0-beta.3",
    "vite": "^6.3.5",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.example.myapp",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false
    },
    "productName": "MyReactApp",
    "directories": {
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ]
  }
}
